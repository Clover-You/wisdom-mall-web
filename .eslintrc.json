{
  "root": true,
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"]
  },
  "overrides": [
    {
      "files": ["cypress/e2e/**/*.{cy,spec}.{js,ts,jsx,tsx}"],
      "extends": ["plugin:cypress/recommended"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  }
}
